generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id        Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email     String   @unique
  password  String
  todos     Todo[]
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  completed Boolean  @default(false)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}